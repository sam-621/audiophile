{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "---------- Shared ----------": ["--------------------"],
      "@/shared/*": ["shared/*"],

      "---------- Front-end ----------": ["--------------------"],
      "@/front-modules/*": ["frontend/modules/*"],
      "@/front-components/*": ["frontend/common/components/*"],
      "@/front-utils/*": ["frontend/common/utils/*"],
      "@/front-interfaces/*": ["frontend/common/interfaces/*"],
      "@/front-hooks/*": ["frontend/common/hooks/*"],
      "@/front-contexts/*": ["frontend/common/contexts/*"],

      "---------- Back-end ----------": ["--------------------"],
      "@/api-db/*": ["api/db/*"],
      "@/api-interfaces/*": ["api/interfaces/*"],
      "@/api-repositories/*": ["api/repositories/*"],
      "@/api-services/*": ["api/services/*"],
      "@/api-constants/*": ["api/constants/*"],
      "@/api-validations/*": ["api/validations/*"],
      "@/api-utils/*": ["api/utils/*"],
      "@/api-guards/*": ["api/guards/*"],
      "@/api-libs/*": ["api/libs/*"],
      "@/api-middlewares/*": ["api/middlewares/*"],
    }

  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "src/pages/_document.tsx",
    "src/pages/_app.js"
, "src/frontend/common/components/custom/Loader.jsx"  ],
  "exclude": [
    "node_modules",
    ".storybook"
  ]
}